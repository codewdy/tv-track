{
    "service": {
        "port": 6789,
        "auth_username": "",
        "auth_password": ""
    },
    "logger": {
        "level": "INFO",
        "filename": "",
        "rotate_day": 7
    },
    "tracker": {
        "resource_dir": "test-data",
        "save_interval": "1m",
        "watched_ratio": 0.9,
        "tags": [
            {
                "tag": "watching",
                "name": "在看"
            },
            {
                "tag": "wanted",
                "name": "想看"
            },
            {
                "tag": "watched",
                "name": "看完"
            },
            {
                "tag": "dropped",
                "name": "搁置"
            },
            {
                "tag": "saved",
                "name": "归档"
            }
        ]
    },
    "download": {
        "concurrent": 5,
        "retry": 5,
        "retry_interval": "1m",
        "timeout": "1h",
        "tmp_dir": "/tmp/tv_track"
    },
    "error": {
        "max_error_count": 1000
    },
    "source_updater": {
        "update_interval": "1h",
        "notrack_timeout": "30d"
    },
    "monitor": {
        "check_smart_interval": "1d",
        "check_zpool_interval": "1d"
    },
    "system_status": {
        "monitor": [
            {
                "key": "top",
                "name": "top",
                "cmd": "top -bn1",
                "interval": 3
            },
            {
                "key": "disk",
                "name": "磁盘",
                "cmd": "df -h",
                "interval": 0
            }
        ],
        "operation": [
            {
                "key": "restart-service",
                "name": "重启服务",
                "cmd": "sudo systemctl restart tv-track"
            },
            {
                "key": "restart-system",
                "name": "重启系统",
                "cmd": "sudo reboot"
            },
            {
                "key": "shutdown-system",
                "name": "关闭系统",
                "cmd": "sudo shutdown now"
            }
        ]
    },
    "api_key": {
        "serp_api": ""
    }
}